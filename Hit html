  <script>
    const paymentSelect = document.getElementById('paymentMethod');
    const paypalContainer = document.getElementById('paypal-button-container');
    const mtnButton = document.getElementById('mtnPay');
    const popup = document.getElementById('mtn-popup');

    paymentSelect.addEventListener('change', () => {
      if (paymentSelect.value === 'paypal') {
        paypalContainer.style.display = 'block';
        mtnButton.style.display = 'none';
      } else if (paymentSelect.value === 'mtn') {
        paypalContainer.style.display = 'none';
        mtnButton.style.display = 'block';
      } else {
        paypalContainer.style.display = 'none';
        mtnButton.style.display = 'none';
      }
    });

    // PayPal Button
    paypal.Buttons({
      createOrder: (data, actions) => {
        return actions.order.create({
          purchase_units: [{
            amount: { value: '5.00' } // Example amount
          }]
        });
      },
      onApprove: (data, actions) => {
        return actions.order.capture().then(() => {
          alert('âœ… Payment successful via PayPal! Your order is being prepared.');
        });
      }
    }).render('#paypal-button-container');

    // MTN Button
    document.getElementById('mtnPay').addEventListener('click', () => {
      popup.classList.add('active');
    });

    function closeMtnPopup() {
      popup.classList.remove('active');
      alert('âœ… MTN Payment simulated! Order confirmed.');
    }
  </script>

