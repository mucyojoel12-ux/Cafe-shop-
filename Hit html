  <!-- MTN Popup -->
  <div id="mtn-popup">
    <h3>MTN Mobile Money Payment</h3>
    <p>Dial *182# to confirm your payment.</p>
    <p>Once confirmed, your order will be processed âœ…</p>
    <button onclick="closeMtnPopup()">Close</button>
